@model MyFaculty2.Models.Teacher

@{
    ViewData["Title"] = "Сторінка Викладача";
}

<h1>Сторінка Викладача</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DegreeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Degree.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
    </dl>
</div>

<hr />

<div>
    <h4>Предмети</h4>
    <a asp-controller="TeacherToSubjectRelations" asp-action="Create" asp-route-teacherId="@Model.Id" asp-route-subjectId="-1">Додати Предмет</a>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Предмети
                </th>
                <th></th>
            </tr>
        </thead>
            <tbody>
                @foreach(var relation in @Model.TeacherToSubjectRelations)
                {
                    <tr>
                        <td>
                            <a asp-controller="Subjects" asp-action="Details" asp-route-id="@relation.Subject.Id">@relation.Subject.Name</a>
                        </td>
                         <td>
                            <a asp-controller="TeacherToSubjectRelations" asp-action="Delete" asp-route-id="@relation.Id">Видалити</a>
                         </td>
                    </tr>  
                }
            </tbody>
    </table>
</div>

<hr />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутись до списку</a>
</div>
